{
  "name": "baguspay",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "ui": "npm run -w @repo/ui ui --",
    "db:pull": "npm run -w @repo/db db:pull",
    "db:migrate": "npm run -w @repo/db db:migrate",
    "db:push": "npm run -w @repo/db db:push",
    "db:generate": "npm run -w @repo/db db:generate",
    "db:seed": "npm run -w @repo/db db:seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "cli/*"
  ],
  "overrides": {
    "zod": "^4.0.14",
    "@types/node": "22.15.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core"
    ]
  }
}
