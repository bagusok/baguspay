{
  "name": "baguspay",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "ui": "npm run -w @repo/ui ui --",
    "db:pull": "npm run -w @repo/db db:pull",
    "db:migrate": "npm run -w @repo/db db:migrate",
    "db:push": "npm run -w @repo/db db:push",
    "db:generate": "npm run -w @repo/db db:generate",
    "db:seed": "npm run -w @repo/db db:seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "tailwind-merge": "^3.3.1"
  }
}
